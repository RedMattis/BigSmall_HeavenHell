		<defName>BS_FieryHalo</defName>
		<label>burning halo</label>
		<description>Carriers of this gene possess an burning angelic halo.</description>
		<iconPath>GeneIcons/Gene_FieryHalo</iconPath>
		<graphicData>
      <color>(255, 255, 255, 220)</color>
			<graphicPath>BS_Halos/FieryHalo</graphicPath>
      <useSkinShader>false</useSkinShader>
