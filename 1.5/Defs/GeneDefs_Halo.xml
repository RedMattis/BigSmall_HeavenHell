        <color>(255, 255, 255, 200)</color>
        <shaderTypeDef>TransparentPostLight</shaderTypeDef>
        <colorType>Custom</colorType>
        <drawData>
          <defaultData>
            <layer>52</layer>
          </defaultData>
          <dataNorth>
            <offset>(0.0, 0, 0.0)</offset>
